{
  "name": "queetings",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "clean": "rm -r dist .cache node_modules; npm ci",
    "build-client": "parcel build -t browser src/client.ts --out-file dist/client.js; cp index.html dist",
    "build-server": "parcel build -t node src/server.ts --out-file dist/server.js",
    "build": "npm run build-client; npm run build-server",
    "rebuild": "npm run clean; npm run build",
    "prepack": "npm run rebuild",
    "start": "node dist/server.js",
    "deploy": "npm run rebuild; npm run deploy",
    "dev": "tsc-watch --build tsconfig.json --onSuccess 'node dist/server.js' --onCompilationComplete 'npm run build-client'",
    "test": "exit 0"
  },
  "author": "abetaev",
  "license": "ISC",
  "dependencies": {
    "node-static": "^0.7.11",
    "stun": "^2.1.0",
    "uuid": "^3.4.0",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@types/node-static": "^0.7.3",
    "@types/uuid": "^3.4.7",
    "@types/ws": "^7.2.1",
    "jest": "^24.9.0",
    "parcel": "^1.12.4",
    "tsc-watch": "^4.1.0",
    "typescript": "^3.7.5",
    "webrtc-adapter": "^7.5.0"
  }
}
